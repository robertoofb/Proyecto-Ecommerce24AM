@model ProyectoWebDL.Models.Entities.Articulo
@{
    Layout = "_LayoutDashboard";
}
<div class="container-fluid">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar articulo</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Editar" method="post">


                    @*Id del articulo oculto*@

                    <input type="hidden" asp-for="PkArticulo" />

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Ingresa el descripción" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" type="number" placeholder="Ingresa el precio" required />

                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>

                </form>

                <a asp-controller="Articulo" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>
