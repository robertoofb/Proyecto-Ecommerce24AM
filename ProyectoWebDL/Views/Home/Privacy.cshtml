@model IEnumerable<ProyectoWebDL.Models.Entities.Articulo>
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


            @foreach (var Item in Model)
            {

                <div class="col">
                    <div class="card shadow-sm">
                        <img src="/@Html.DisplayFor(x => Item.UrlImagenPath)" class="bd-placeholder-img card-img-top" width="100%" height="225" />
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(x => Item.Nombre )</h5>
                            <p class="card-text"> @Html.DisplayFor(x => Item.Descripcion ) </p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>

                        </div>
                    </div>
                </div>


            }
        </div>




    </div>
</div>
