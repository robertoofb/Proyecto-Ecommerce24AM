@model IEnumerable<ProyectoWebDL.Models.Entities.Usuario>
@{
    ViewData["Title"] = "Investigadores";
}

<link rel="stylesheet" href="~/css/Invstigadores.css" asp-append-version="true" />
<div class="general">
    
    <div class="title-body">
        <br></br>
        <h2 class="tt">Investigadores Destacados</h2>
    </div>
    <div class="cards-invs">


        <div class="contenedor-title-mas">
            <button class="button-mas">Más...</button>
        </div>

        <div class="carrera">

            @foreach (var Item in Model)
            {
                <div class="container">
                    <div class="avatar-flip">
                        <img src="/@Html.DisplayFor(x => Item.UrlImagenPath)" height="150" width="150">
                        <img src="https://i0.wp.com/imgs.hipertextual.com/wp-content/uploads/2016/02/CD.gif?fit=480%2C270&quality=50&strip=all&ssl=1" height="150" width="150">
                    </div>
                    <h2>@Html.DisplayFor(x => Item.Nombre )</h2>
                    <h4>Investigador</h4>
                    <p>¡Bienvenido al mundo de la innovación en el desarrollo de software! Como Investigador en Software, soy un profesional especializado en la investigación, desarrollo y mejora continua de tecnologías y procesos relacionados con el software.</p>
                </div>
            }

        </div>

    </div>
</div>